<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title | default("Roadrunner STEM Initiative") }}</title>


  <link rel="icon" href="/assets/images/favicon.png" type="image/png" />

  <link rel="stylesheet" href="/assets/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
  {% include "_includes/header.njk" %}
    <main>
      {{ content | safe }}
    </main>
  {% include "_includes/footer.njk" %}

  <script>
  const toggleContact = () => {
    document.getElementById('contactPanel')?.classList.toggle('active');
  };
  document.getElementById('contactToggle')?.addEventListener('click', toggleContact);
</script>
<script>
  const roleSelect = document.getElementById('community-role');
  const otherField = document.getElementById('community-other-container');

  roleSelect?.addEventListener('change', () => {
    otherField.style.display = roleSelect.value === 'Other' ? 'block' : 'none';
  });
</script>

</body>

</html>
