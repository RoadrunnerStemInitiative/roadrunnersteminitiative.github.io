<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title | default("Roadrunner STEM Initiative") }}</title>


  <link rel="icon" href="/assets/images/favicon.png" type="image/png" />

  <link rel="stylesheet" href="/assets/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
  {% include "_includes/header.njk" %}
    <main>
      {{ content | safe }}
    </main>
  {% include "_includes/footer.njk" %}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactToggle = document.getElementById('contactToggle');
    const contactPanel = document.getElementById('contactPanel');

    if (contactToggle && contactPanel) {
      contactToggle.addEventListener('click', () => {
        contactPanel.classList.toggle('active');
      });
    }
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const roleSelect = document.getElementById('community-role');
    const otherContainer = document.getElementById('community-other-container');

    if (roleSelect && otherContainer) {
      roleSelect.addEventListener('change', () => {
        otherContainer.style.display = roleSelect.value === 'Other' ? 'block' : 'none';
      });
    }
  });
</script>


</body>

</html>
